  /* header */
  div#header
    position: relative

    height: auto
    width: auto

    background-color: #ffffff
    font-family: fontFamily
    line-height: normal
    text-align: left
    vertical-align: middle

    div#header-inner
      position: relative

      height: headerHeight
      margin: 0 auto
      width: width

      /* logo */
      a#logo-txt
        float: none
        left: 10px
        position: absolute
        top: 0
        z-index: 5

        height: headerHeight
        padding: 0
        width: 97px

        background-position: 20px 23px
        background-repeat: no-repeat
        color: fontColorDark
        image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/logo.png' 57px 18px
        font-size: inherit
        line-height: normal

        &:hover
          background-color: fontColorLink
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/logo-hover.png' 57px 18px

          &::after
            display: none

        &::after
          position: absolute
          right: 0
          top: 15px

          display: block
          height: 34px
          width: 1px

          background-color: #e5e8e1
          content: ''

      /* navigation */
      ul.menu
        left: 106px
        position: absolute
        top: 0
        z-index: 10

        display: block
        height: headerHeight

        font-size: inherit
        vertical-align: middle

        li
          float: left

          display: block
          margin-left: -1px

          vertical-align: middle

          > a
            display: block
            padding: 0 15px

            background-color: transparent
            border: 0
            border-left: 1px solid transparent
            border-right: 1px solid transparent
            color: fontColorDark
            font-size: 15px
            font-weight: 600
            line-height: headerHeight
            opacity: 0.75
            vertical-align: middle

            &:hover
              background-color: transparent
              opacity: 1

          &:hover
            background-color: transparent

            ul
              display: block

          &:first-child
            margin-left: 0

          &.active
            background-color: transparent

            > a
              height: headerHeight + 1px
              margin-bottom: -1px

              background-color: fontColor
              border-left-color: #222422
              border-right-color: #222422
              color: #ffffff
              font-weight: 600
              opacity: 1
              text-decoration: none

              &:hover
                background-color: fontColor

          ul
            left: 15px
            position: absolute
            top: headerHeight - 10px

            padding: 10px 0
            width: 180px

            background-color: #ffffff
            border-radius: 4px
            box-shadow: 0 0 0 1px rgba(#abb3a1,0.4), 0 3px 9px rgba(#000000,0.1)

            &::before
              left: 15px
              position: absolute
              top: -10px

              arrow(top, rgba(#abb3a1,0.4), 10px)
              content: ''

            &::after
              left: 15px
              position: absolute
              top: -9px

              arrow(top, #ffffff, 10px)
              content: ''

            li
              float: none

              font-size: inherit
              line-height: normal

              > a
                display: block
                height: 30px
                padding: 0 15px
                width: auto

                color: fontColorDark
                font-size: 14px
                font-weight: 600
                line-height: 30px

                &:hover
                  background-color: fontColorLink
                  color: #ffffff
                  text-decoration: none

      /* search field */
      form#search-form
        position: absolute
        right: 30px
        top: 17px

        display: block
        height: auto
        width: auto

        vertical-align: middle

        input#q
          float: none
          position: relative
          z-index: 5

          box-sizing: border-box
          height: 28px
          margin: 0
          padding: 0 30px 0 15px
          width: 158px

          background-color: #ffffff
          background-position: 132px 6px
          background-repeat: no-repeat
          border: 1px solid #d8dbd3
          border-radius: 50px
          color: FontColorLight
          font-family: fontFamily
          font-size: 13px
          font-weight: 400
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/search-icon.png' 14px 14px
          line-height: 28px
          outline: 0

          placeholder(FontColorLight)

          &:focus
            border-color: #aeb3a6
            color: FontColor
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/search-icon-focus.png' 14px 14px


  /* player */
  div#player-container
    left: 0
    position: absolute
    right: 0

    height: playerHeight
    width: auto

    background-color: fontColor
    border: 0
    border-bottom: 1px solid #222422
    border-top: 1px solid #222422
    color: #cacfc4
    line-height: normal

    div#player-inner
      position: relative

      height: auto
      margin: 0 auto
      width: width

      div#player-controls
        float: none
        position: relative

        height: auto
        width: auto

        div#player-timebar
          position: relative
          top: auto

          display: block
          height: auto
          width: auto

          background-color: transparent
          border: 0
          font-size: inherit
          line-height: normal

  /* content */
  div#content-wrapper
    position: relative

    margin: 0
    min-height: 0
    overflow: visible
    padding-top: playerHeight + 2px /* + 2px for border widths */
    width: 100%

    background-color: #ffffff

    div#container
      position: relative

      display: block
      margin: 0
      width: auto

      background-color: transparent

      div#content
        position: relative

        margin: 0
        padding: 0
        width: auto

        div#content-left
          float: none
          position: relative

          margin: 0 auto
          min-height: 0
          padding-top: 30px
          width: width

          background-color: transparent

          /* filter (submenu) */
          ul#submenu
            position: relative

            height: submenuHeight
            padding-bottom: 20px
            width: auto

            border: 0
            border-bottom: 1px solid #e5e8e1
            font-size: inherit
            line-height: normal

            li
              float: left
              position: relative

              display: block

              vertical-align: middle

              &#submenu-filter
                position: absolute

                span

                  &.title
                    color: fontColorLight
                    text-align: right

                  &#submenu-filter-title
                    display: inline-block
                    height: submenuHeight
                    padding: 0 10px

                    background-color: fontColorLink
                    border: 0
                    border-radius: 5px
                    color: #ffffff
                    font-size: 14px
                    font-weight: 600
                    line-height: submenuHeight

                ul
                  position: absolute
                  right: 0
                  top: submenuHeight + 4px

                  padding: 10px 0
                  width: 180px

                  background-color: #ffffff
                  border: 0
                  border-radius: 4px
                  box-shadow: 0 0 0 1px rgba(#abb3a1,0.4), 0 3px 9px rgba(#000000,0.1)

                  &::before
                    left: 0
                    position: absolute
                    right: 0
                    top: -10px

                    display: block
                    height: 10px

                    content: ''

                  li
                    float: none

                    font-size: inherit
                    line-height: normal

                    > a
                      display: block
                      height: 30px
                      padding: 0 15px
                      width: auto

                      border-radius: 0
                      color: fontColorDark
                      font-size: 14px
                      font-weight: 600
                      line-height: 30px

                      &:hover
                        background-color: fontColorLink
                        color: #ffffff
                        text-decoration: none

              a
                position: relative

                display: block
                height: submenuHeight
                padding: 0 10px

                background-color: transparent
                border: 0
                border-radius: 5px
                color: fontColorDark
                font-size: 14px
                font-weight: 600
                line-height: submenuHeight
                opacity: 0.75

                &:hover
                  border: 0
                  opacity: 1
                  text-decoration: none

                &.selected
                  background-color: fontColorLink
                  border: 0
                  color: #ffffff
                  opacity: 1
































