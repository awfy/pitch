{

  "manifest_version":           2,

  "name":                       "Pitch",
  "description":                "A Chrome extension for HypeMachine.",
  "version":                    "1.0.0",

  "background": {
                                "page":   "background.html"
  },

  "icons": {
                                "16": 		"assets/imgs/icons/small.png",
                                "48": 		"assets/imgs/icons/medium.png",
                                "128": 		"assets/imgs/icons/large.png"
  },

  "permissions": [
                                "http://*/*", "https://*/*"
  ],

  "content_scripts": [ {
                                "matches":            [ "http://*.hypem.com/*", "https://*.hypem.com/*", "http://*.hypemachine.com/*", "https://*.hypemachine.com/*" ],
                                "css":                [ "assets/styles/style.css" ],
                                "js":                 [ "assets/scripts/jquery-1.9.1.min.js", "assets/scripts/app-min.js" ],
                                "run_at":             "document_end"
  }],

  "web_accessible_resources": [
                                "assets/imgs/*"
  ]

}