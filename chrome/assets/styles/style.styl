
/* helpers */
@import '_helpers.styl'
@import '_hidden.styl'

/* build */
html body
  box-sizing: border-box !important
  min-width: minWidth !important
  padding: border !important

  background-color: darkBg !important
  background-image: none !important
  color: fontColor !important
  font-family: fontFamily !important
  font-smoothing: auto !important
  font-size: 400 !important
  vertical-align: middle !important

  h1, h2, h3, h4, h5, h6,
  a, em, p, strong
    font-family: fontFamily !important

  a
    color: fontColorLink

    &:active
      top: auto

  /* header */
  div#header
    position: relative
    z-index: 100

    height: auto
    width: auto

    background-color: darkBg
    font-family: fontFamily
    line-height: normal
    text-align: left
    vertical-align: middle

    div#header-inner
      position: relative

      height: headerHeight
      margin: 0 auto
      width: auto

      /* logo */
      a#logo-txt
        float: none
        left: 0
        position: absolute
        top: 0
        z-index: 5

        height: headerHeight
        padding: 0
        width: padding + logoWidth + padding

        background-position: padding 18px
        background-repeat: no-repeat
        color: fontColorDark
        image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/header/logo.png' logoWidth 18px
        font-size: inherit
        line-height: normal

        &:hover
          background-color: fontColorLink
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/header/logo-hover.png' logoWidth 18px

          &::after
            display: none

        &::after
          position: absolute
          right: 0
          top: ((headerHeight - 24px)/2)

          display: block
          height: 24px
          width: 1px

          background-color: darkerBg
          content: ''

      /* navigation */
      ul.menu
        left: padding + logoWidth + padding - 1px
        position: absolute
        top: 0
        z-index: 10

        display: block
        height: headerHeight

        font-size: inherit
        vertical-align: middle

        li
          float: left

          display: block
          margin-left: -1px

          vertical-align: middle

          > a
            display: block
            padding: 0 15px

            background-color: transparent
            border: 0
            color: #ffffff
            font-size: 14px
            font-weight: 600
            line-height: headerHeight
            opacity: 0.75
            vertical-align: middle

          &:hover
            background-color: transparent

            a
              background-color: fontColorLink
              color: #ffffff
              opacity: 1

            ul
              display: block

          &:first-child
            margin-left: 0

          &.active
            background-color: transparent

            > a
              height: headerHeight

              background-color: darkerBg
              color: #ffffff
              font-weight: 600
              opacity: 1
              text-decoration: none

            &:hover

              > a
                background-color: fontColorLink
                opacity: 1

          ul
            left: 0
            position: absolute
            top: headerHeight
            z-index: 500

            padding: 10px 0
            width: 180px

            background-color: fontColorLink
            border-radius: 0 0 6px 6px

            li
              float: none

              margin: 0

              font-size: inherit
              line-height: normal

              > a
                display: block
                height: 30px
                padding: 0 15px
                width: auto

                color: #f3f7f0
                font-size: 14px
                font-weight: 600
                line-height: 30px

                &:hover
                  background-color: #6da831
                  color: #ffffff
                  text-decoration: none

      /* random button */
      a#shuf
        left: padding + logoWidth + padding + 230px /* 230 is the width of the menu */
        position: absolute
        top: 0

        display: block
        padding: 0 15px

        background-color: transparent
        border: 0
        color: #ffffff
        font-size: 14px
        font-smoothing: auto
        font-weight: 600
        line-height: headerHeight
        opacity: 0.75
        vertical-align: middle

        &::before
          color: #ffffff
          content: 'Random'

        &:hover
          background-color: fontColorLink
          color: #ffffff
          opacity: 1

          &::before
            color: #ffffff

      /* usermenu */
      div#filter
        position: absolute
        right: padding + 160px + padding
        top: 0
        z-index: 50

        div
          display: block

          vertical-align: middle

          &#menu-out a
            float: left

            display: block
            height: headerHeight
            margin: 0
            padding: 0 15px
            width: auto

            background-color: transparent
            border: 0
            color: #ffffff
            font-size: 14px
            font-weight: 600
            line-height: headerHeight
            opacity: 0.75
            vertical-align: middle

            &:hover
              background-color: fontColorLink
              color: #ffffff
              opacity: 1
              text-decoration: none

          &#menu-friends
            display: none

          &#menu-username
            width: auto

            cursor: pointer
            text-align: left

            a#menu-item-username
              display: block
              height: headerHeight
              padding: 0 15px
              width: auto

              background-color: transparent
              border: 0
              color: #ffffff
              font-size: 14px
              font-weight: 600
              line-height: headerHeight
              opacity: 0.75
              vertical-align: middle

              img#avatar-mini
                height: 20px
                margin: -3px 0 0 5px
                width: 20px

                border-radius: 3px
                vertical-align: middle

              &:hover
                background-color: fontColorLink
                color: #ffffff
                opacity: 1

            ul
              left: auto
              position: absolute
              right: 0
              top: headerHeight
              z-index: 500

              padding: 10px 0
              width: 180px

              background-color: fontColorLink
              border-radius: 0 0 6px 6px

              li
                float: none

                margin: 0

                font-size: inherit
                line-height: normal

                > a
                  position: relative

                  display: block
                  height: 30px
                  padding: 0 15px
                  width: auto

                  background-color: transparent
                  border: 0
                  color: #f3f7f0
                  font-size: 14px
                  font-weight: 600
                  line-height: 30px

                  span.unread-notification-icon
                    position: absolute
                    right: 15px
                    top: 11px

                    display: block
                    height: 8px
                    width: 8px

                    background-color: fontColorFavorite
                    border-radius: 8px
                    color: fontColor
                    font-size: 0

                  &:hover
                    background-color: #6da831
                    color: #ffffff
                    text-decoration: none

            &:hover

              a#menu-item-username
                background-color: fontColorLink
                color: #ffffff
                opacity: 1

              ul
                display: block

      /* search field */
      form#search-form
        position: absolute
        right: padding
        top: ((headerHeight - 30px)/2)

        display: block
        height: auto
        width: auto

        vertical-align: middle

        input#q
          float: none
          position: relative
          z-index: 5

          box-sizing: border-box
          height: 30px
          margin: 0
          padding: 0 30px 0 15px
          width: 160px

          background-color: darkBg
          background-position: 132px 7px
          background-repeat: no-repeat
          border: 1px solid darkerBg
          border-radius: 50px
          color: rgba(#ffffff,0.75)
          font-family: fontFamily
          font-size: 13px
          font-weight: 400
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/header/search-icon.png' 14px 14px
          line-height: 30px
          outline: 0

          placeholder(FontColorLight)

          &:hover
            background-color: #383b37
            border-color: darkerBg
            color: #ffffff
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/header/search-icon-hover.png' 14px 14px

          &:focus
            background-color: darkerBg
            border-color: darkerBg
            box-shadow: 0 0 5px 1px #4a4d49
            color: #ffffff
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/header/search-icon-focus.png' 14px 14px

  /* loader */
  div#player-loading
    bottom: auto
    left: 50%
    position: fixed
    right: auto
    top: 50%
    z-index: 999

    height: auto
    margin: -41px 0 0 -41px
    padding: 26px 0
    width: 82px

    background-color: fontColorLink
    border-radius: 6px
    opacity: 0.85

    span
      position: relative

      display: block
      height: 30px
      margin: 0 auto
      padding: 0
      width: 30px

      background-color: transparent
      background-image: url('chrome-extension://__MSG_@@extension_id__/assets/imgs/player/loading.gif')
      background-position: 0 0
      background-repeat: no-repeat
      border: 0
      border-radius: 0
      font-size: 0
      text-transform: lowercase

  /* player */
  div#player-container
    left: border
    position: absolute
    right: border
    top: headerHeight
    z-index: 90

    height: playerHeight
    width: auto

    background-color: darkerBg
    border: 0
    color: #cacfc4
    line-height: normal

    &.stick
      position: fixed
      top: 0
      z-index: 998

    div#player-inner
      position: relative
      z-index: 50

      height: auto
      margin: 0 auto
      width: auto

      /* return */
      div#player-page
        left: mobile
        position: absolute
        right: auto
        top: playerPadding
        z-index: 55

        visibilty: visible
        width: auto

        background-color: transparent

        a
          display: block
          height: controlHeight
          width: controlWidth

          background-position: ((controlWidth - 14px)/2) ((controlHeight - 14px)/2)
          background-repeat: no-repeat
          font-size: 0
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/return-icon.png' 14px 14px

          &:hover
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/return-icon-hover.png' 14px 14px

          img
            display: none
            margin: 0

      /* global controls */
      div#player-controls
        float: none
        position: relative
        z-index: 50

        height: auto
        width: auto

        &.disabled
          cursor: default
          opacity: 0.25
          pointer-events: none

        /* icons (excluding sharing) */
        a#playerFav,
        a#playerNext,
        a#playerPlay,
        a#playerPrev
          float: none
          left: padding
          position: absolute
          top: playerPadding

          display: block
          height: controlHeight
          padding: 0
          width: controlWidth

          background-color: transparent
          background-repeat: no-repeat
          border: 0
          font-size: inherit
          line-height: normal

        a#playerPrev
          background-position: ((controlWidth - 16px)/2) ((controlHeight - 12px)/2)
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/previous-icon.png' 16px 12px

          &:hover
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/previous-icon-hover.png' 16px 12px

          &.playerPrev-inactive
            display: block
            opacity: 0.3
            pointer-events: none

        a#playerPlay
          left: padding + controlWidth

          background-position: ((controlWidth - 12px)/2) ((controlHeight - 14px)/2)
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/play-icon.png' 12px 14px

          &:hover
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/play-icon-hover.png' 12px 14px

          &.pause
            background-position: ((controlWidth - 10px)/2) ((controlHeight - 14px)/2)
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/pause-icon.png' 10px 14px

            &:hover
              image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/pause-icon-hover.png' 10px 14px

        a#playerFav
          left: padding + (controlWidth * 2)

          background-position: ((controlWidth - 16px)/2) ((controlHeight - 14px)/2)
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/favorite-icon.png' 16px 14px

          &:hover
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/favorite-icon-hover.png' 16px 14px

          &.fav-on, &.fav-on:hover
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/favorite-icon-on.png' 16px 14px

        a#playerNext
          left: padding + (controlWidth * 4)

          background-position: ((controlWidth - 16px)/2) ((controlHeight - 12px)/2)
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/next-icon.png' 16px 12px

          &:hover
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/next-icon-hover.png' 16px 12px

          &.playerNext-inactive
            display: block
            opacity: 0.3
            pointer-events: none

        /* sharing menu */
        div.share-icons
          float: none
          left: padding + (controlWidth * 3)
          position: absolute
          top: playerPadding

          border-radius: 3px 3px 0 0
          cursor: pointer

          &::before
            display: block
            height: controlHeight
            padding: 0
            width: controlWidth

            background-color: transparent
            background-position: ((controlWidth - 18px)/2) ((controlHeight - 14px)/2)
            background-repeat: no-repeat
            content: ''
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/share-icon.png' 18px 14px
            border: 0
            font-size: inherit
            line-height: normal

          &:hover
            background-color: #515450

            &::before
              image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/share-icon-hover.png' 18px 14px

            div.playersharemenu
              display: block

          div.playersharemenu
            left: 0
            position: absolute
            right: auto
            top: controlHeight
            z-index: 500

            display: none
            padding: 10px 0
            width: 180px

            background-color: #515450
            border-radius: 0 6px 6px 6px

            > a
              display: block
              height: 30px
              padding: 0 15px
              width: auto

              color: #f3f7f0
              font-size: 14px
              font-weight: 600
              line-height: 30px

              &:hover
                background-color: #393b38
                color: #ffffff
                text-decoration: none

              &::before
                content: ''
                font-smoothing: auto

              &.icon-sc::before
                content: 'SoundCloud'

              &.icon-twitter::before
                content: 'Twitter'

              &.icon-facebook::before
                content: 'Facebook'


        /* volume controls */
        div#player-volume-mute
          left: padding + (controlWidth * 5) + 12px
          position: absolute
          right: auto
          top: playerPadding

          display: block
          height: controlHeight
          width: controlWidth

          background-color: transparent
          background-position: ((controlWidth - 12px)/2) ((controlHeight - 14px)/2)
          background-repeat: no-repeat
          cursor: default
          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/volume-icon.png' 12px 14px

        div#player-volume-outer
          left: padding + (controlWidth * 6) + 12px
          position: absolute
          right: auto
          top: playerPadding + ((controlHeight - 8px)/2)

          display: block
          height: 8px
          width: 100px

          background-color: #4a4d49
          border: 0
          border-radius: 8px
          cursor: pointer
          line-height: normal

          div#player-volume-ctrl
            height: 8px

            background-color: fontColorLink
            border-radius: 8px

        /* song artist & title */
        div#player-nowplaying
          float: none
          left: mobile
          position: absolute
          right: mobile
          top: playerPadding

          height: 28px
          padding: 0 (8px + controlWidth)
          width: auto

          color: fontColorLighter
          font-size: 15px
          font-weight: 400
          line-height: 28px
          overflow: ellipsis
          text-align: center

          a
            color: fontColorLighter

            &:hover
              color: fontColorLink
              text-decoration: none

          /* blog post */
          a.store.read-post
            position: absolute
            right: 0
            top: 0

            display: block
            height: controlHeight
            margin: 0
            width: controlWidth

            background-position: ((controlWidth - 12px)/2) ((controlHeight - 14px)/2)
            background-repeat: no-repeat
            font-size: 0
            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/blog-icon.png' 12px 14px

            &:hover
              image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/player/blog-icon-hover.png' 12px 14px


        /* time & position */
        div#player-timebar
          position: absolute
          right: padding
          top: auto

          display: block
          height: auto
          width: mobile - (padding*2)

          background-color: transparent
          border: 0
          font-size: inherit
          line-height: normal

          div#player-time-position, div#player-time-total
            position: absolute
            top: playerPadding

            height: 28px
            width: 34px

            color: #cacfc4
            font-size: 13px
            font-weight: 600
            line-height: 28px
            text-align: center
            vertical-align: middle

          div#player-time-position
            left: 0

          div#player-time-total
            left: auto
            right: 0

          div#player-progress-outer
            left: 34px + 10px
            position: absolute
            right: 10px + 34px
            top: playerPadding + ((controlHeight - 8)/2)

            height: 8px
            overflow: hidden
            width: auto

            background-color: #4a4d49
            border: 0
            border-radius: 8px
            line-height: normal

            div#player-progress-loading
              height: 8px

              background-color: fontColorLight
              border-radius: 8px

            div#player-progress-playing
              height: 8px

              background-color: fontColorLink
              border-radius: 8px

  /* change notice */
  div#flash-message
    left: 0
    position: absolute
    right: 0
    top: 0
    z-index: 100

    display: none

    background-color: fontColorLink
    color: #ffffff
    font-size: 12px
    font-weight: 600
    text-align: center
    line-height: 50px

  /* content */
  div#content-wrapper
    position: relative

    margin: 0
    min-height: 0
    overflow: visible
    padding-top: playerHeight
    width: 100%

    background-color: #ffffff

    div#container
      position: relative

      display: block
      margin: 0
      width: auto

      background-color: transparent

      /* removes padding from infinite pagination containers */
      &:nth-child(7), &:nth-child(9)

        div#content div#content-left
          padding: 0

          div#track-list div.section.section-track.first
            border-top: 1px solid #f0f2ed

      div#content
        position: relative

        margin: 0
        padding: 0
        width: auto

        div#content-left
          float: none
          position: relative

          box-sizing: border-box
          margin: 0
          min-height: 0
          padding: 0
          width: auto

          background-color: transparent

          /* filter (submenu) */
          ul#submenu
            position: relative

            height: submenuHeight
            margin: 0 auto
            padding: 8px padding
            width: auto

            border: 0
            font-size: inherit
            line-height: normal

            > li
              float: left
              position: relative

              display: block

              vertical-align: middle

              &#submenu-filter
                position: absolute
                right: padding
                top: 8px

                &:hover

                  span#submenu-filter-title
                    background-color: fontColorLink
                    border-radius: 4px 4px 0 0
                    color: #ffffff

                  ul
                    display: block

                a#shuffle-songs
                  background: transparent

                span

                  &.title
                    color: fontColorLight
                    font-size: 12px
                    font-weight: 600
                    text-align: right

                  &#submenu-filter-title
                    box-sizing: border-box
                    display: inline-block
                    margin: 0 0 0 6px
                    height: submenuHeight
                    padding: 0 13px

                    background-color: transparent
                    border: 1px solid fontColorLink
                    border-radius: submenuHeight
                    color: fontColorLink
                    font-size: 12px
                    font-weight: 600
                    line-height: submenuHeight - 2px

                ul
                  position: absolute
                  right: 0
                  top: submenuHeight

                  display: none
                  padding: 10px 0
                  width: 180px

                  background-color: fontColorLink
                  border: 0
                  border-radius: 6px 0 6px 6px

                  li
                    float: none

                    font-size: inherit
                    line-height: normal

                    > a
                      display: block
                      height: 30px
                      padding: 0 15px
                      width: auto

                      border: 0
                      color: #f3f7f0
                      font-size: 13px
                      font-weight: 600
                      line-height: 30px

                      span.checkmark
                        float: right

                        font-weight: 600
                        font-size: 14px

                      &:hover
                        background-color: #6da831
                        color: #ffffff
                        text-decoration: none

              > a
                position: relative

                box-sizing: border-box
                display: block
                height: submenuHeight
                padding: 0 13px

                background-color: transparent
                border: 1px solid transparent
                border-radius: submenuHeight
                color: fontColorLight
                font-size: 12px
                font-weight: 600
                line-height: submenuHeight - 2px
                opacity: 0.75
                text-align: center

                &:hover
                  opacity: 1
                  text-decoration: none

                &.selected
                  border-color: fontColorLink
                  color: fontColorLink
                  opacity: 1

              /* playlists */
              &#nav-playlist-1

                > a
                  color: #e17b3f

                  &.selected
                    border-color: #e17b3f
                    color: #e17b3f

              &#nav-playlist-2

                > a
                  color: #6f4094

                  &.selected
                    border-color: #6f4094
                    color: #6f4094

              &#nav-playlist-3

                > a
                  color: #cc3da8

                  &.selected
                    border-color: #cc3da8
                    color: #cc3da8

          /* track list & loved tracks */
          div#track-list, div#loved-tracks

            div.section
              border: 0

              a:active
                top: auto

              &.artist
                border: 0

                h2
                  position: relative

                  margin: 0
                  height: 0
                  padding: 0
                  width: 0

                  border: 0
                  background: transparent
                  line-height: 0

                  div.rank
                    float: none
                    position: absolute
                    left: padding + (trackArtwork - trackRank)
                    top: trackPadding + (trackArtwork - trackRank) + 1px

                    display: block
                    height: trackRank
                    margin: 0
                    padding: 0
                    width: trackRank

                    background-color: fontColorLink
                    border-radius: 4px 0 4px 0
                    color: #ffffff
                    font-size: 12px
                    font-weight: 400
                    line-height: trackRank
                    text-align: center

                  a
                    font-size: 0

              &.section
                display: block
                overflow: visible
                padding: 0

                background-color: transparent
                border: 0

                &.first
                  border-top: 1px solid #e1e6da

                &.odd
                  background-color: #fbfcfa

                &.haarp-active
                  background-color: #f0f5eb

                  div.section-player ul.playpause li a
                    display: block

                &.same

                  div.section-player ul.playpause
                    background-color: fontColorLink
                    border-radius: trackRadius

                div.section-player
                  box-sizing: border-box
                  margin: 0 auto
                  min-height: trackArtwork + (trackPadding * 2)
                  padding: trackPadding (126px + padding) trackPadding (padding + trackArtwork + 14px)
                  width: 100%

                  &:hover

                    ul.playpause li a
                      display: block

                    h3.track_name
                      opacity: 1

                  ul.playpause
                    left: padding
                    position: absolute
                    top: trackPadding
                    z-index: 50

                    height: trackArtwork
                    width: trackArtwork

                    li a
                      display: none
                      height: trackArtwork
                      width: trackArtwork

                      font-size: normal

                      background-color: rgba(#30332e,0.5)
                      background-position: ((trackArtwork - 30px)/2) ((trackArtwork - 30px)/2 + 1px)
                      background-repeat: no-repeat
                      border-radius: trackRadius
                      image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/track/play-icon.png' 30px 30px

                      &:hover
                        background-color: rgba(#30332e,0.75)
                        image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/track/play-icon-hover.png' 30px 30px

                      &.pause
                        image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/track/pause-icon.png' 30px 30px

                        &:hover
                          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/track/pause-icon-hover.png' 30px 30px

                  span.rank
                    position: absolute
                    left: padding + (trackArtwork - trackRank)
                    top: trackPadding + (trackArtwork - trackRank)
                    z-index: 40

                    display: block
                    height: trackRank
                    padding: 0
                    width: trackRank

                    background-color: fontColorLink
                    border-radius: (trackRadius - 1px) 0 (trackRadius - 1px) 0
                    color: #ffffff
                    font-size: 12px
                    font-weight: 400
                    line-height: trackRank
                    text-align: center

                  a.thumb
                    left: padding
                    position: absolute
                    top: trackPadding
                    z-index: 30

                    display: block
                    height: trackArtwork
                    width: trackArtwork

