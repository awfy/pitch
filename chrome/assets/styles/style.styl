                              position: static
                              right: auto
                              top: auto

                              > a
                                display: block
                                height: controlHeight
                                padding: 0 padding
                                width: auto

                                color: #f3f7f0
                                font-size: 13px
                                font-weight: 400
                                line-height: controlHeight

                                &:hover
                                  background-color: #6da831
                                  color: #ffffff
                                  text-decoration: none

                        /* sharing */
                        span.share-links
                          position: static
                          right: auto
                          top: auto

                          width: auto

                          &::before
                            display: block
                            padding: 0 padding 3px

                            color: rgba(#f3f7f0,0.8)
                            content: 'Share to...'
                            font-sise: 12px
                            font-weight: 400
                            line-height: 17px

                          a
                            display: block
                            height: controlHeight
                            margin: 0
                            padding: 0 padding
                            width: auto

                            &::before
                              color: #f3f7f0
                              content: 'Twitter'
                              font-size: 13px
                              font-smoothing: auto
                              font-weight: 400
                              line-height: controlHeight

                            &.facebook-share::before
                              content: 'Facebook'

                            &:hover
                              background-color: #6da831
                              opacity: 1
                              text-decoration: none

                              &::before
                                color: #ffffff

                    /* favorite */
                    ul.tools
                      float: right
                      position: relative
                      right: auto
                      top: 0

                      width: 100px

                      li.favdiv
                        float: right
                        position: relative

                        &:hover a

                          &.haarp-fav-ctrl
                            image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/track/favorite-icon-hover.png' 16px 14px

                          &.haarp-fav-count
                            color: fontColorDark

                        a.haarp-fav-ctrl
                          position: relative

                          display: block
                          height: controlHeight
                          padding: 0
                          width: controlWidth

                          background-position: ((controlWidth - 16px)/2) ((controlHeight - 14px)/2)
                          background-repeat: no-repeat
                          image: 'chrome-extension://__MSG_@@extension_id__/assets/imgs/track/favorite-icon.png' 16px 14px
