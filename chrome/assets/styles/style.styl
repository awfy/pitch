                            padding: 0 padding 3px

                            color: rgba(#f3f7f0,0.8)
                            content: 'Add to playlist...'
                            font-sise: 12px
                            font-weight: 400
                            line-height: 17px

                          a
                            display: block
                            height: controlHeight
                            margin: 0
                            padding: 0 padding
                            width: auto

                            &.active

