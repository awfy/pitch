                                font-smoothing: auto
                                font-weight: 400
                                line-height: controlHeight
                                text-align: right

                              &:hover::after
                                color: #ffffff

                            &.playlist-selected
                              display: none

                            &::before
                              color: #f3f7f0
                              content: attr(title)
                              font-size: 13px
                              font-smoothing: auto
                              font-weight: 400
                              line-height: controlHeight

                            &:hover
                              background-color: #6da831
                              opacity: 1
                              text-decoration: none

                              &::before
