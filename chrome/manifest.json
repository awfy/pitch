{

  "manifest_version":           2,

  "name":                       "Pitch",
  "description":                "A Chrome extension for HypeMachine.",
  "version":                    "1.0.1",

  "background": {
                                "page":   "background.html"
  },

  "icons": {
                                "16": 		"assets/imgs/icons/icon16.png",
                                "48": 		"assets/imgs/icons/icon48.png",
                                "128": 		"assets/imgs/icons/icon128.png"
  },

  "permissions": [
                                "http://*/*", "https://*/*"
  ],

  "content_scripts": [ {
                                "matches":            [ "http://*.hypem.com/*", "https://*.hypem.com/*", "http://*.hypemachine.com/*", "https://*.hypemachine.com/*" ],
                                "css":                [ "assets/styles/style.css" ],
                                "run_at":             "document_end"
  }],

  "web_accessible_resources": [
                                "assets/imgs/*"
  ],

  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"

}